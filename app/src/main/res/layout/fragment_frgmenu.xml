<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".frgmenu">

    <!-- TODO: Update blank fragment layout -->
   <!-- Zona superior con información del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menú"
                    android:layout_margin="30dp"
                    android:textColor="@color/azul"
                    android:textSize="30sp"
                    android:gravity="center" />
                <!-- Zona superior con información del usuario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <!-- Icono del usuario -->
                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"

                            android:layout_marginStart="16dp"
                            />

                        <!-- Información del usuario -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/menu_txtnombre"
                                android:text="Nombre Apellidos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Matrícula"
                                android:id="@+id/menu_txtmatricula"
                                android:textSize="14sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="correo@dominio.com"
                                android:id="@+id/menu_txtcorreo"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <!-- Zona inferior con opciones del menú -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/degradado"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Opción de Perfil -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/menu_card_perfil"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@color/azul"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/candado"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Perfil"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Opción de Pasar Inscribir -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/menu_card_inscribirse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@color/azul"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="19dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/lapiz" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inscribirse"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Opción de Pasar Grupos -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/menu_btn_grupos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@color/azul"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/usuario"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grupos"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>